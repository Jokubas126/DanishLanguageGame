<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_screen_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_dialogue_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_answer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_answer_buttons_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.77" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_screen_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10218978" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <Button
        android:id="@+id/left_button"
        android:layout_width="58dp"
        android:layout_height="46dp"
        android:onClick="move_characterLeft"
        android:text="@string/left_button"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_middle"
        app:layout_constraintTop_toBottomOf="@+id/up_button" />

    <Button
        android:id="@+id/down_button"
        android:layout_width="58dp"
        android:layout_height="46dp"
        android:onClick="move_characterDown"
        android:text="@string/down_button"
        app:layout_constraintEnd_toEndOf="@+id/answer_button_5"
        app:layout_constraintStart_toStartOf="@+id/answer_button_2"
        app:layout_constraintTop_toBottomOf="@+id/right_button" />

    <Button
        android:id="@+id/right_button"
        android:layout_width="58dp"
        android:layout_height="46dp"
        android:onClick="move_characterRight"
        android:text="@string/right_button"
        app:layout_constraintStart_toEndOf="@+id/left_button"
        app:layout_constraintTop_toBottomOf="@+id/up_button" />

    <Button
        android:id="@+id/up_button"
        android:layout_width="58dp"
        android:layout_height="46dp"
        android:onClick="move_characterUp"
        android:text="@string/up_button"
        app:layout_constraintEnd_toEndOf="@+id/answer_button_3"
        app:layout_constraintStart_toStartOf="@+id/answer_button_0"
        app:layout_constraintTop_toTopOf="@+id/guideline_answer_buttons_top" />

    <ImageView
        android:id="@+id/npc_world_view0"
        android:layout_width="89dp"
        android:layout_height="78dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="56dp"
        android:contentDescription="@string/content_description_npc_world_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/tower" />

    <ImageView
        android:id="@+id/npc_world_view1"
        android:layout_width="89dp"
        android:layout_height="78dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="68dp"
        android:contentDescription="@string/content_description_npc_world_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/tower" />

    <ImageView
        android:id="@+id/npc_world_view2"
        android:layout_width="89dp"
        android:layout_height="78dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/content_description_npc_world_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/tower" />

    <ImageView
        android:id="@+id/npc_world_view3"
        android:layout_width="89dp"
        android:layout_height="78dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="56dp"
        android:contentDescription="@string/content_description_npc_world_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/tower" />


    <ImageView
        android:id="@+id/world_view"
        android:layout_width="1000dp"
        android:layout_height="1000dp"
        android:contentDescription="@string/content_description_world_image"
        android:scaleType="fitXY"
        android:src="@drawable/map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.682"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/char_world_view"
        android:layout_width="89dp"
        android:layout_height="78dp"
        android:layout_marginBottom="500dp"
        android:contentDescription="@string/content_description_char_world_image"
        android:src="@drawable/main_character"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/world_view"
        app:layout_constraintVertical_bias="0.959" />

    <ImageView
        android:id="@+id/npc_dialogue_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/content_description_npc"
        android:src="@drawable/big_baker"
        app:layout_constraintBottom_toTopOf="@+id/dialogue_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/conversation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/content_description_world_image"
        android:src="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/answer_button_4"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="@string/answer_button"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
        app:layout_constraintTop_toBottomOf="@+id/answer_button_3" />

    <Button
        android:id="@+id/answer_button_5"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="@string/answer_button"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
        app:layout_constraintTop_toBottomOf="@+id/answer_button_4" />

    <Button
        android:id="@+id/answer_button_1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="@string/answer_button"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
        app:layout_constraintTop_toBottomOf="@+id/answer_button_0" />

    <Button
        android:id="@+id/answer_button_2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="@string/answer_button"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
        app:layout_constraintTop_toBottomOf="@+id/answer_button_1" />

    <Button
        android:id="@+id/answer_button_3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="@string/answer_button"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
        app:layout_constraintTop_toTopOf="@+id/guideline_answer_buttons_top" />

    <Button
        android:id="@+id/answer_button_0"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="@string/answer_button"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
        app:layout_constraintTop_toTopOf="@+id/guideline_answer_buttons_top" />

    <Button
        android:id="@+id/exit_menu_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="73dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:text="@string/exit_menu_button"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialogue_text"
        android:layout_width="267dp"
        android:layout_height="53dp"
        android:text="@string/dialogue_text"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
        app:layout_constraintTop_toTopOf="@+id/guideline_dialogue_text_view" />

    <ImageView
        android:id="@+id/hint_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="108dp"
        android:contentDescription="@string/content_description_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toEndOf="@+id/npc_dialogue_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/morgenmad" />

    <TextView
        android:id="@+id/answer_text_0"
        android:layout_width="267dp"
        android:layout_height="50dp"
        android:text="@string/answer_text"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
        app:layout_constraintTop_toTopOf="@+id/guideline_answer_text_view" />

    <ImageView
        android:id="@+id/speaker_button"
        android:layout_width="61dp"
        android:layout_height="60dp"
        android:contentDescription="@string/speaker_button"
        android:src="@drawable/speaker"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
        app:layout_constraintStart_toEndOf="@+id/dialogue_text"
        app:layout_constraintTop_toTopOf="@+id/guideline_dialogue_text_view" />

    <ImageView
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/submit_button"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:src="@drawable/submit_button"
        app:layout_constraintBottom_toTopOf="@+id/guideline_answer_buttons_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/answer_text_0" />

</android.support.constraint.ConstraintLayout>